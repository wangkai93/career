<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="cn.edu.zzia.career.pojo.CmCompany" table="cm_company"
		schema="career" dynamic-insert="true" dynamic-update="true">
		<id name="cid" type="java.lang.Integer">
			<column name="cid" />
			<generator class="native" />
		</id>
		<property name="cname" column="cname" />
		<property name="cpassword" column="cpassword" />
		<property name="cface" column="cface" />
		<property name="chr" column="chr" />
		<property name="cphone" column="cphone" />
		<property name="cemail" column="cemail" />
		<property name="cinfo" column="cinfo" />
		<property name="cmark" column="cmark" />
		<property name="ctype" column="ctype" />
		<property name="caddress" column="caddress" />
		<property name="ctime" column ="ctime" />
		<property name="cstate" column="cstate" not-null="false" />
		<many-to-one name="cmAreaByAid" class="cn.edu.zzia.career.pojo.CmArea">
			<column name="aid" />
		</many-to-one>
		<set name="cmRecruitsByCid" inverse="true" cascade="all">
			<key>
				<column name="cid" />
			</key>
			<one-to-many not-found="ignore"
				class="cn.edu.zzia.career.pojo.CmRecruit" />
		</set>
	</class>
</hibernate-mapping>